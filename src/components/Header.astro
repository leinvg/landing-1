---
import Button from "./Button.astro";

const arr = [
  "Departamentos en venta",
  "Oficinas en venta",
  "Próximos lanzamientos",
  "Vende tu terreno",
  "Solicita una cotización",
  "Preguntas frecuentes",
];
---

<header
  class="fixed top-0 left-0 right-0 bg-white flex items-stretch justify-center w-full h-18 border-b border-gray-200"
>
  <div
    class="lg:container flex items-center justify-between w-full px-6 text-teal-700"
  >
    <a
      href="/"
      class="flex items-center gap-1.5"
      aria-label="Havitat - Página principal"
    >
      <svg viewBox="0 0 640 640" class="fill-current size-7" aria-hidden="true">
        <path
          d="M201.7 291.5c34.3 18.7 64.5 44.1 88.8 74.5 11.1 13.9 21 28.9 29.4 44.8 8.5-15.9 18.3-30.8 29.4-44.8 24.3-30.5 54.5-55.9 88.8-74.5 41.7-22.7 89.4-35.5 139.7-35.5h9.9c11.1 0 20.1 9 20.1 20.1 0 148-119.9 267.9-267.9 267.9h-40.2C151.9 544 32 424.1 32 276.1 32 265 41 256 52.1 256H62c50.4 0 98.1 12.8 139.7 35.5zM335.9 102c16.9 15.9 61.4 63.4 89 142.3A339.97 339.97 0 0 0 320 326.4c-29.2-33.9-64.8-61.8-104.9-82.1 27.6-78.9 72.2-126.4 89-142.3 4.3-4.1 10-6 15.9-6s11.6 2 15.9 6z"
        ></path>
      </svg>
      <span class="text-2xl font-semibold tracking-tighter">havitat</span>
    </a>
    <div
      class="hidden h-full divide-x-1 divide-gray-200 font-medium transition-colors lg:flex border-x-1 border-gray-200 *:hover:bg-neutral-100/50 *:active:bg-neutral-100 *:active:inset-shadow-xs"
    >
      <a href="#" class="flex flex-col items-center justify-center gap-1 px-6">
        <span class="text-sm font-semibold text-current/50">Cotización</span>
        <div class="flex items-center gap-2">
          <svg
            viewBox="0 0 16 16"
            class="fill-current size-4"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="m3.855 7.286 1.067-.534a1 1 0 0 0 .542-1.046l-.44-2.858A1 1 0 0 0 4.036 2H3a1 1 0 0 0-1 1v2c0 .709.082 1.4.238 2.062a9.012 9.012 0 0 0 6.7 6.7A9.024 9.024 0 0 0 11 14h2a1 1 0 0 0 1-1v-1.036a1 1 0 0 0-.848-.988l-2.858-.44a1 1 0 0 0-1.046.542l-.534 1.067a7.52 7.52 0 0 1-4.86-4.859Z"
              clip-rule="evenodd"></path>
          </svg>
          <span>580 7002</span>
        </div>
      </a>
      <a href="#" class="flex flex-col items-center justify-center gap-1 px-6">
        <span class="text-sm font-semibold text-current/50">Postventa</span>
        <div class="flex items-center gap-2">
          <svg
            viewBox="0 0 16 16"
            class="fill-current size-4"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="m3.855 7.286 1.067-.534a1 1 0 0 0 .542-1.046l-.44-2.858A1 1 0 0 0 4.036 2H3a1 1 0 0 0-1 1v2c0 .709.082 1.4.238 2.062a9.012 9.012 0 0 0 6.7 6.7A9.024 9.024 0 0 0 11 14h2a1 1 0 0 0 1-1v-1.036a1 1 0 0 0-.848-.988l-2.858-.44a1 1 0 0 0-1.046.542l-.534 1.067a7.52 7.52 0 0 1-4.86-4.859Z"
              clip-rule="evenodd"></path>
          </svg>
          <span>580 7002</span>
        </div>
      </a>
    </div>
    <div
      x-data="{ open: false }"
      x-effect="document.body.classList.toggle('overflow-hidden', open)"
      class="lg:hidden"
    >
      <Button @click="open = ! open" label="Menú">
        <svg
          viewBox="0 0 24 24"
          stroke-width="1.5"
          class="fill-none stroke-current size-5"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </Button>
      <div
        x-show="open"
        class="absolute inset-0 bg-white flex flex-col pt-18 w-full h-screen overflow-y-auto custom-scrollbar"
      >
        <header
          class="fixed top-0 bg-white flex items-center justify-between px-6 w-full h-18 border-b border-gray-200"
        >
          <a
